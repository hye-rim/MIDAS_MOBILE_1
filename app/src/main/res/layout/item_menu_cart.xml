<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_item_menu"
    android:layout_marginTop="@dimen/margin_item_menu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_cart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_item_menu"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_cart_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_item_menu"
            android:layout_marginRight="@dimen/margin_item_menu"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="아메리카노"
            android:textColor="@color/background"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="사이즈"
                android:textColor="@color/background"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_item_cart_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="수량 "
                android:textColor="@color/background"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_item_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2"
                android:textColor="@color/background"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/txt_item_cart_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="8,000원"
                android:textColor="@color/background"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_item_cart_count_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/txt_item_cart_count_change"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@id/btn_item_cart_count_plus"
                android:background="@color/colorWhite"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_item_cart_count_minus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@id/txt_item_cart_count_change"
                android:background="@color/colorPrimary"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>